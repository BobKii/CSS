<divfeetback class="feetback">
  <button type="button" class="feetback_badge">{{badge}}</button>
  {{#with expirience}}
  <div class="feetback_header"> {{title}} </div>
  {{!-- <div class="feetback_badge"> {{badge}} </div> --}}

  <div class="expirience">
    {{#each list}}
    <div class="expirience_list">
      <div class="expirience_name"> {{name}} </div>
      <div class="expirience_details"> {{details}} </div>
    </div>
    {{/each}}
  </div>

  {{/with}}
</divfeetback>


<div class="advantages">
  {{#each advantages}}
  <div>
    <strong> {{title}} </strong>
    <p> {{text}} </p>

  </div>
  {{/each}}
</div>

<footer class="footer">

  <div class="col-3">
    {{> logo }}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div class="col-3">
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true }}
  </div>
  {{/each}}

</footer>